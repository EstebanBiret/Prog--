{% extends 'base.html.twig' %}

{% block title %}Le Saint blog{% endblock %}

{% block body %}
    <div class="articles-infos"> 
        <p> Article(s) de la catégorie : <strong> {{ category.name }}</strong></p>
        <strong>{{ articles | length}} </strong> article(s) trouvé(s) !
    </div>

    <div class="articles">

        {% for article in articles %}
            <a href="{{ path('app_single_article', {'slug': article.slug}) }}" class="article-item">
                <div class="article-image">
                    <img src={{ article.imageUrl }} width="300" height="300" alt="Image de l'article : {{ article.title }}">
                </div>
                <div class="article-details-flex">
                    <div class="article-author-details">
                        <div class="article-author-picture"> 
                            <img src={{ article.author.profile.picture }} width="50" height="50" alt="Image de profil de : {{ article.author.name }}">       
                        </div>
                    </div>
                    <div class="article-content-details">
                        <h2 class="article-title"> {{ article.title }} </h2>
                        <div class="article-createdAt"> {{ article.fromNow }} </div>
                    </div>
                </div>
            </a> 
        {% endfor %}
    </div>

{% endblock %}


