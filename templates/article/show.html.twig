{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ article.imageUrl }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                    <td>
                        {% for category in article.categories %}
                            <a href="{{ path('app_articles_by_category', {'slug': category.slug}) }}" class="article-category-item badge">
                                {{ category.name }} ({{ category.articles | length }} article(s) publi√©(s)) 
                            </a>
                        {% endfor %}
                    </td>
            </tr>

        </tbody>
    </table>

    <a class="article-category-item badge" href="{{ path('app_article_index') }}">Back to list</a>

    <a class="article-category-item badge" href="{{ path('app_article_edit', {'id': article.id}) }}">Edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
